{
  "name": "events-webapp",
  "scripts": {
    "build": "pnpm build:server && pnpm build:client && pnpm postbuild",
    "start:win": "set DEBUG=eventsapp:* & set \"NODE_ENV=development\" & nodemon server/index.ts",
    "start": "DEBUG=eventsapp:* \"NODE_ENV=development\"nodemon server/index.ts",
    "start:win:dbg": "set DEBUG=* & set \"NODE_ENV=development\" & nodemon server/index.ts",
    "start:dbg": "DEBUG=* \"NODE_ENV=development\" nodemon server/index.ts",
    "af": "prettier --write .",
    "build:server": "cd server && pnpm build",
    "build:client": "cd client && pnpm build",
    "build:client:update": "pnpm build:client && pnpm postbuild",
    "postbuild": "copyfiles --up 2 client/dist/**/* server/build/client",
    "install": "cd server && pnpm install",
    "postinstall": "cd client && pnpm install",
    "start:prod:win": "set DEBUG=eventsapp:* & set NODE_ENV=production & node server/build/server/index.js",
    "start:prod": "DEBUG=eventsapp:* NODE_ENV=production node server/build/server/index.js",
    "clean": "rimraf server/build",
    "start:prod:log": "DEBUG=eventsapp:* NODE_ENV=production node server/build/server/index.js >access.log",
    "start:prod:log:win": "set DEBUG=eventsapp:* & set NODE_ENV=production & node server/build/server/index.js >access.log"
  },
  "prettier": {
    "bracketSameLine": true,
    "jsxSingleQuote": true,
    "printWidth": 144,
    "proseWrap": "always",
    "singleQuote": true
  },
  "devDependencies": {
    "@types/node": "^18.0.4",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
