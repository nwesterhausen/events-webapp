{
  "name": "events-webapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm prebuild && tsc && pnpm postbuild",
    "start": "set DEBUG=eventsapp:* & set \"NODE_ENV=development\" & nodemon server/index.ts",
    "start:dbg": "set DEBUG=* & set \"NODE_ENV=development\" & nodemon server/index.ts",
    "af": "prettier --write typing-stubs client/src client/public server README.md",
    "build:client": "cd client && pnpm build",
    "prebuild": "pnpm build:client",
    "postbuild": "copyfiles client/dist/* build",
    "postinstall": "cd client && pnpm install",
    "start:prod": "set DEBUG=eventsapp:* & set NODE_ENV=production & node build/index.js",
    "clean": "rimraf build",
    "start:prod:lin": "DEBUG=eventsapp:* NODE_ENV=production node build/index.js >access.log"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/csurf": "^1.11.2",
    "@types/passport-discord": "^0.1.5",
    "better-sqlite3": "^7.6.0",
    "better-sqlite3-session-store": "^0.1.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "debug": "~2.6.9",
    "dotenv": "^16.0.1",
    "express": "~4.16.1",
    "express-session": "^1.17.3",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "knex": "^2.1.0",
    "morgan": "~1.9.1",
    "passport": "^0.6.0",
    "passport-discord": "^0.1.4",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.5.0",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/express-http-proxy": "^1.6.3",
    "@types/express-session": "^1.17.5",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.3",
    "@types/passport": "^1.0.9",
    "@types/passport-google-oauth20": "^2.0.11",
    "copyfiles": "^2.4.1",
    "express-http-proxy": "^1.6.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "license": "MIT",
  "prettier": {
    "bracketSameLine": true,
    "jsxSingleQuote": true,
    "printWidth": 144,
    "proseWrap": "always",
    "singleQuote": true
  },
  "nodemonConfig": {
    "ignore": [
      "client/*",
      "docs/*"
    ]
  },
  "packageManager": "pnpm@7.5.0"
}
